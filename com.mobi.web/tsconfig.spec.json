{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jasmine",
      "node"
    ],
    "paths": {
      "@angular/*": [ "./node_modules/@angular/*" ],
      "assert": ["./node_modules/assert"],
      "util": ["./node_modules/util"],
    }
  },
  "files": [
    "src/main/resources/public/test.ts",
    "src/main/resources/public/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}

{
  "compileOnSave": false,
    "compilerOptions": {
      "baseUrl": "./",
      "downlevelIteration": true,
      "outDir": "./target/classes/build/out-tsc",
      "target": "es2015",
      "declaration": false,
      "module": "esnext",
      "skipLibCheck": true,
      "moduleResolution": "node",
      "lib": [ 
        "es2018", 
        "dom" 
      ],
      "sourceMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "noImplicitAny": false,
      "suppressImplicitAnyIndexErrors": true,
      "esModuleInterop": true,
      "importHelpers": true,
      "allowSyntheticDefaultImports": true,
      "typeRoots": [
        "node_modules/@types"
      ]
    },
    "exclude": [
      "node_modules"
    ]
  }

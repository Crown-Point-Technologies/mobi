@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix : <http://mobi.com/ontologies/policy#> .
@base <http://mobi.com/ontologies/policy> .

<http://mobi.com/ontologies/policy> a owl:Ontology ;
    rdfs:label "The Mobi Policy Ontology"@en ;
    rdfs:comment "The Mobi Policy ontology describes security access control policies."@en ;
    dct:creator [foaf:name "Stephen Kahmann"], [foaf:name "Megan Mercer"] ;
    foaf:maker [foaf:name "Mobi"; foaf:homepage <https://mobi.inovexcorp.com/>] ;
    dct:modified "2018-02-02"^^xsd:date .

# Policy

:Policy a owl:Class ;
    dct:title "Policy"@en ;
    dct:description "A Collection of Rules to be applied against a request."@en ;
    rdfs:subClassOf [
        a owl:Restriction ;
        owl:cardinality "1"^^xsd:nonNegativeInteger ;
        owl:onProperty :fileLocation
    ] .

:fileLocation a owl:DatatypeProperty, owl:FunctionalProperty ;
    dct:title "file location"@en ;
    dct:description "The file location where the described Policy is stored."@en ;
    rdfs:domain :Policy ;
    rdfs:range xsd:string .

<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>matonto-parent</artifactId>
        <groupId>org.matonto</groupId>
        <version>1.0.0-SNAPSHOT</version>
        <relativePath>../matonto-parent/pom.xml</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>ontology.cli</artifactId>

    <packaging>bundle</packaging>
    <name>${project.groupId}.${project.artifactId}</name>

    <dependencies>
        <dependency>
            <groupId>org.matonto</groupId>
            <artifactId>ontology.api</artifactId>
        </dependency>
        <dependency>
            <groupId>org.matonto</groupId>
            <artifactId>persistence.api</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.karaf.shell</groupId>
            <artifactId>org.apache.karaf.shell.console</artifactId>
        </dependency>
        <dependency>
            <groupId>biz.aQute.bnd</groupId>
            <artifactId>biz.aQute.bndlib</artifactId>
        </dependency>            
        <dependency>
            <groupId>org.openrdf.sesame</groupId>
            <artifactId>sesame-runtime-osgi</artifactId>
            <version>${ontology.openrdf.version}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.groupId}.${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Name>MatOnto Ontology Service - CLI</Bundle-Name>
                        <Bundle-Version>${project.version}</Bundle-Version>
                        <Export-Package></Export-Package>
                        <Import-Package>
<!--                             org.openrdf.*;version="${ontology.openrdf.version}",
                            org.matonto.ontology.core.api.*;version="[1.0,2)",
                            org.matonto.ontology.core.utils;version="[1.0,2)",
                            org.matonto.rdf.api.*;version="[1.0,2)",
                            com.google.common.base.*,
                            org.apache.commons.io.*, -->
                            org.apache.felix.service.command,
			              	org.apache.karaf.shell.commands,
			              	org.apache.karaf.shell.console,
                            *
                        </Import-Package>
                        <Karaf-Commands>*</Karaf-Commands>
                        <Service-Component>*</Service-Component>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>

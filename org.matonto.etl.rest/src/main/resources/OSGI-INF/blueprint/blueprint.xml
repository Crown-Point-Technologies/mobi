<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="
           http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <!-- to setup camel servlet with OSGi HttpService -->
    <reference id="httpService" interface="org.osgi.service.http.HttpService"/>

    <bean id="camelBean" class="org.apache.camel.component.servlet.osgi.OsgiServletRegisterer"
          init-method="register"
          destroy-method="unregister">
        <property name="alias" value="/etl"/>
        <property name="matchOnUriPrefix" value="true"/>
        <property name="httpService" ref="httpService"/>
        <property name="servlet" ref="camelServlet"/>
    </bean>


    <bean id="camelServlet" class="org.apache.camel.component.servlet.CamelHttpTransportServlet">
        <property name="servletName" value="ETLServlet"/>
    </bean>

    <!-- Reference to the csvConverter -->
    <reference id="csvConverterBean"
               interface="org.matonto.etl.api.csv.CSVConverter"
               availability="optional">
    </reference>

    <!-- a bean for user services -->
    <bean id="csvService" class="org.matonto.etl.rest.CSV">
        <property name="csvConverter" ref="csvConverterBean"/>
    </bean>

    <bean id="myCSV" class="org.apache.camel.model.dataformat.CsvDataFormat">
    </bean>


    <camelContext xmlns="http://camel.apache.org/schema/blueprint" id="etl-context"  allowUseOriginalMessage="true">

        <!-- configure rest to use the camel-servlet component, and use json binding mode -->
        <!-- and tell to output json in pretty print mode -->
        <!-- setup context path and port number that Apache Tomcat will deploy this application with,
             as we use the servlet component, then we need to aid Camel to tell it these details so Camel
             knows the url to the REST services.
             Notice: This is optional, but needed if the RestRegistry should enlist accurate information.
             You can access the RestRegistry from JMX at runtime -->
        <restConfiguration component="servlet" bindingMode="off" contextPath="etl/"
                           port="8181" host="localhost">
            <dataFormatProperty key="prettyPrint" value="true"/>
            <dataFormatProperty key="json.in.mustBeJAXBElement" value="false"/>
            <dataFormatProperty key="bindingMode" value="off"/>
            <!--<dataFormatProperty key="allowMultipartParsing" value="true"/>-->
        </restConfiguration>


        <rest path="/csv" >
            <description>CSV ETL Tools</description>
            <post uri="upload">
                <description>Upload CSV File. Send CSV as a binary file in the body. FileType and FileName are required.</description>
                <responseMessage message="CSV mapped to RDF"/>
                <route>
                    <to uri="bean:csvService?method=setFileName(${headers.File-Name})"/>
                    <to uri="bean:csvService?method=upload"/>
                </route>
            </post>

            <post uri="etl/{document.name}">
                <description>ETL the document using the posted mapping file</description>
                <param name="document.name" type="header" description="The name of the document to etl"/>
                <route>
                    <to uri="bean:csvService?method=setMappingFile"/>
                    <to uri="bean:csvService?method=etlFile(${header.document.name})"/>
                </route>
            </post>

            <get uri="/preview/{document.name}">
                <description>Gather rows from a document</description>
                <param name="document.name" type="path" description="The document name"/>
                <param name="Row-Count" type="header"/>
                <route>
                    <choice>
                        <when>
                            <simple>${header.Row-Count} != null</simple>
                            <to uri="bean:csvService?method=getRows(${header.document.name},${header.Row-Count})"/>
                        </when>
                        <when>
                            <simple>${header.Row-Count} == null</simple>
                            <to uri="bean:csvService?method=getRows(${header.document.name},10)"/>
                        </when>
                    </choice>

                </route>
            </get>
        </rest>

    </camelContext>

</blueprint>
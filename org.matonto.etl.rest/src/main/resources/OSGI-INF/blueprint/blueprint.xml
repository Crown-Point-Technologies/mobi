<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="
           http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <!-- to setup camel servlet with OSGi HttpService -->
    <reference id="httpService" interface="org.osgi.service.http.HttpService"/>

    <bean id="camelBean" class="org.apache.camel.component.servlet.osgi.OsgiServletRegisterer"
          init-method="register"
          destroy-method="unregister">
        <property name="alias" value="/etl"/>
        <property name="matchOnUriPrefix" value="true"/>
        <property name="httpService" ref="httpService"/>
        <property name="servlet" ref="camelServlet"/>
    </bean>

    <service interface="javax.servlet.http.HttpServlet">
        <service-properties>
            <entry key="alias" value="/api-docs"/>
            <entry key="init.base.path" value="etl"/>
            <entry key="host" value="http://localhost:8181/etl/"/>
            <entry key="apiContextIdListing" value="true"/>
            <entry key="init.api.description" value="MatOnto ETL Rest Endpoint"/>
            <entry key="init.api.title" value="MatOnto ETL"/>
            <entry key="init.api.contact.url" value="http://matonto.org"/>
            <entry key="init.api.contact.email" value="dev-team@matonto.org"/>
            <entry key="init.api.contact.name" value="The MatOnto Development Team"/>
        </service-properties>
        <bean class="org.apache.camel.swagger.servlet.RestSwaggerServlet">
            <property name="apiContextIdListing" value="true"/>
        </bean>
    </service>


    <bean id="camelServlet" class="org.apache.camel.component.servlet.CamelHttpTransportServlet">
        <property name="servletName" value="ETLServlet"/>
    </bean>

    <!-- Reference to the csvConverter -->
    <reference id="csvConverterBean"
               interface="org.matonto.etl.api.csv.CSVConverter"
               availability="optional">
    </reference>

    <!-- a bean for user services -->
    <bean id="userService" class="org.matonto.etl.rest.UserService"/>
    <bean id="testService" class="org.matonto.etl.rest.Test"/>
    <bean id="csvService" class="org.matonto.etl.rest.CSV">
        <property name="csvConverter" ref="csvConverterBean"/>
    </bean>

    <camelContext xmlns="http://camel.apache.org/schema/blueprint" id="etl-context"  allowUseOriginalMessage="true">

        <!-- configure rest to use the camel-servlet component, and use json binding mode -->
        <!-- and tell to output json in pretty print mode -->
        <!-- setup context path and port number that Apache Tomcat will deploy this application with,
             as we use the servlet component, then we need to aid Camel to tell it these details so Camel
             knows the url to the REST services.
             Notice: This is optional, but needed if the RestRegistry should enlist accurate information.
             You can access the RestRegistry from JMX at runtime -->
        <restConfiguration component="servlet" bindingMode="json" contextPath="http://localhost:8181/etl/"
                           port="8181" host="http:localhost:8181/etl">
            <dataFormatProperty key="prettyPrint" value="true"/>
            <dataFormatProperty key="allowMultipartParsing" value="true"/>
        </restConfiguration>

        <!-- defines the rest services using the context-path /user -->
        <rest path="/user" consumes="application/json" produces="application/json">
            <description>User rest service</description>

            <!-- this is a rest GET to view an user by the given id -->
            <get uri="/{id}" outType="org.matonto.etl.rest.User">
                <description>Find user by id</description>
                <to uri="bean:userService?method=getUser(${header.id})"/>
            </get>

            <!-- this is a rest PUT to create/update an user -->
            <put type="org.matonto.etl.rest.User">
                <description>Updates or create a user</description>
                <to uri="bean:userService?method=updateUser"/>
            </put>

            <!-- this is a rest GET to find all users -->
            <get uri="/findAll" outType="org.matonto.etl.rest.User[]">
                <description>Find all users</description>
                <to uri="bean:userService?method=listUsers"/>
            </get>

        </rest>
        <rest path="/test" consumes="application/json" produces="application/json">
            <description>Test Rest Stuff</description>
            <get uri="uuid" outType="String">
                <description>Get random uuid</description>
                <responseMessage message="The random uuid"/>
                <route>
                    <to uri="bean:testService?method=generateUUID()"/>
                    <filter>
                        <simple>${body} == null</simple>
                        <setHeader headerName="Exchange.HTTP_RESPONSE_CODE">
                            <constant>404</constant>
                        </setHeader>
                    </filter>
                </route>
            </get>
        </rest>

        <rest path="/csv" consumes="application/json" produces="application/json">
            <description>CSV Test</description>
            <get uri="test" outType="String">
                <description>A simple test</description>
                <responseMessage message="A test message"/>
                <route>
                    <to uri="bean:csvService?method=test()"/>
                    <filter>
                        <simple>${body} == null</simple>
                        <setHeader headerName="Exchange.HTTP_RESPONSE_CODE">
                            <constant>404</constant>
                        </setHeader>
                    </filter>
                </route>
            </get>
        </rest>


@prefix dc:   <http://purl.org/dc/elements/1.1/> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix : <urn://matonto.org/ontologies/Clustering#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .


<urn://matonto.org/ontologies/Clustering> a owl:Ontology ;
  rdfs:label "MatOnto Clustering Ontology" ;
  rdfs:comment "Ontology defining the structures representing cluster topologies in MatOnto" ;
  dc:title "MatOnto Clustering Ontology" ;
  dc:description "Ontology defining the structures representing cluster topologies in MatOnto" .

# rdfs:label "" ;
# rdfs:comment "" ;
# dc:title "" ;
# dc:description "" .

:Pod a owl:Class ;
  rdfs:label "MatOnto Pod" ;
  rdfs:comment "A group of locally clustered MatOnto nodes" ;
  dc:title "MatOnto Pod" ;
  dc:description "A group of locally clustered MatOnto nodes" .

:memberNode a rdf:Property , owl:DatatypeProperty ;
  rdfs:range :PodNode ; rdfs:domain :Pod ;
  rdfs:label "Member Node" ;
  rdfs:comment "Indicates the specified PodNode is a member of this Pod" ;
  dc:title "Member Node" ;
  dc:description "Indicates the specified PodNode is a member of this Pod" .



:Node a owl:Class ;
  rdfs:label "MatOnto Node" ;
  rdfs:comment "A MatOnto node, whether local or remote" ;
  dc:title "MatOnto Node" ;
  dc:description "A MatOnto node, whether local or remote" .

:nodeAddress a rdf:Property , owl:DatatypeProperty , owl:FunctionalProperty ;
  rdfs:range xsd:string ; rdfs:domain :Node ;
  rdfs:label "Node Address" ;
  rdfs:comment "The network address of the remote node" ;
  dc:title "Node Address" ;
  dc:description "The network address of the remote node" .


:PodNode a owl:Class ;
  rdfs:subClassOf :Node ;
  rdfs:label "Local Pod MatOnto Node" ;
  rdfs:comment "A MatOnto node within the local Pod" ;
  dc:title "Local Pod MatOnto Node" ;
  dc:description "A MatOnto node within the local Pod" .

:nodeActive a rdf:Property , owl:DatatypeProperty , owl:FunctionalProperty ;
  rdfs:range xsd:boolean ; rdfs:domain :PodNode ;
  rdfs:label "Node Active" ;
  rdfs:comment "Whether or not a node is actively part of the cluster at a given time" ;
  dc:title "Node Active" ;
  dc:description "Whether or not a node is actively part of the cluster at a given time" .



:nodeLastActive a rdf:Property , owl:DatatypeProperty , owl:FunctionalProperty ;
  rdfs:range xsd:dateTime ; rdfs:domain :PodNode ;
  rdfs:label "Node Last Active" ;
  rdfs:comment "The date and time the node was last active" ;
  dc:title "Node Last Active" ;
  dc:description "The date and time the node was last active" .

<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">

        <command name="matonto/export">
            <action class="org.matonto.cli.exporter.CLIExporter">
                <property name="exportService" ref="exportServiceBean" />
            </action>
        </command>
        <command name="matonto/import">
            <action class="org.matonto.cli.exporter.CLIImporter">
                <property name="importService" ref="importServiceBean" />
            </action>
        </command>
        <command name="matonto/transform">
            <action class="org.matonto.cli.exporter.CLITransform">
                <property name="csvConverter" ref="csvConverterBean" />
            </action>
        </command>

    </command-bundle>

    <reference id="exportServiceBean"
               interface="org.matonto.etl.api.rdf.RDFExportService"
               availability="mandatory">
    </reference>
    <reference id="importServiceBean"
               interface="org.matonto.etl.api.rdf.RDFImportService"
               availability="mandatory">
    </reference>
    <reference id="csvConverterBean"
               interface="org.matonto.etl.api.csv.CSVConverter"
               availability="mandatory">
    </reference>

</blueprint>